{
  "manifest_version": 3,
  "name": "Chapter Timer",
  "version": "1.0",
  "description": "1m20s countdown timer for chapter pages.",
  "permissions": ["tabs", "scripting"],
  "host_permissions": [
    "https://platform.comptia.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://platform.comptia.org/*/productviewer/*/*/outline"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
